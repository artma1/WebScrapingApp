@model IEnumerable<WebScrappingApp.Models.WebScrapingResult>

<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Index</title>
</head>
<body>
  <p>
    <a asp-action="Create" class="btn btn-success">Scrap</a>
  </p>

  <form asp-action="Index" method="post">
    <div class="form-group">
      <label for="linesToCreate" class="control-label">Lines to Create</label>
      <input type="number" id="linesToCreate" name="linesToCreate" class="form-control" />
    </div>
    <div class="form-group">
      <input type="submit" value="Change edit" class="btn btn-primary" />
    </div>
    </form>


  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Text)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Url)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Date)
          </td>
          <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</body>
</html>